<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDailyExpense">

    <TextView
        android:text="Food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:id="@+id/textView"
        android:layout_alignBaseline="@+id/weight"
        android:layout_alignBottom="@+id/weight"
        android:layout_alignRight="@+id/datetextview"
        android:layout_alignEnd="@+id/datetextview" />

    <EditText
        android:id="@+id/weight"
        android:textColor="@color/white"
        android:hint="(Taka)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="6"

        android:inputType="number|numberDecimal"
        android:textSize="20sp"
        android:layout_below="@+id/result"
        android:layout_alignLeft="@+id/height"
        android:layout_alignStart="@+id/height" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:text="Transport"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/height"
        android:layout_alignBottom="@+id/height"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />



    <Button
        android:id="@+id/calc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:textSize="25dp"
        android:text="Save"
        android:textColor="@color/white"
        android:layout_marginBottom="26dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="Add your daily expenses"
        android:layout_marginTop="50dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="(taka)"
        android:ems="6"
        android:textColor="@color/white"
        android:inputType="number|numberDecimal"
        android:textSize="20sp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/weight"
        android:layout_alignRight="@+id/datebutton"
        android:layout_alignEnd="@+id/datebutton" />

    <Button
        android:id="@+id/datebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Date"
        android:textColor="@color/black"

        android:layout_above="@+id/calc"
        android:layout_alignLeft="@+id/stat"
        android:layout_alignStart="@+id/stat"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="39dp" />

    <Button
        android:id="@+id/list"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="List" />

    <TextView
        android:id="@+id/datetextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Date"
        android:textColor="@color/white"

        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_alignTop="@+id/datebutton"
        android:layout_toLeftOf="@+id/calc"
        android:layout_toStartOf="@+id/calc" />

    <Button
        android:id="@+id/stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Statistics"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:textColor="@color/black"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/height"
        android:layout_marginTop="38dp"
        android:text="institutional" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="others"
        android:textColor="@color/black"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="14dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/height"
        android:textColor="@color/white"
        android:hint="(Taka)"

        android:layout_marginTop="22dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:hint="(Taka)"

        android:layout_alignTop="@+id/textView6"
        android:ems="10"
        android:inputType="number" />


</RelativeLayout>